{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",

    // Build
    "declaration": true,
    "outDir": "./dist",
    "noEmit": true
  }
}
